%br
.container
  .row
    .col-md-4
    .col-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "well"}) do |f|
        = devise_error_messages!
        .fieldset 
          %legend Sign up
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: 'form-control'
        .field
          = f.label :password
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off", class: 'form-control'
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
          %br
        .actions
          = f.label :firstname
          = f.text_field :firstname, class: 'form-control'
          %br
          = f.label :lastname
          = f.text_field :lastname, class: 'form-control'
          %br/
          = f.select :profilable_type, options_for_select(['therapist', 'patient']), style: 'width: 100%'
          %br
          %br
          = f.submit "Sign up", class: 'btn btn-primary', style: 'width: 100%'
      = render "devise/shared/links"
    .col-md-4
