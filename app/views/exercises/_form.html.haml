= render 'layouts/messages'

.row
  .col-md-4
    = form_for exercise do |f|   
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :description
        = f.text_field :description, class: 'form-control'
      = f.submit 'Save', class: 'btn btn-default'
