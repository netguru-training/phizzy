.container
  .row
    .col-md-8
      %h3 #{patient.firstname}
      %p
        - if patient.profilable.user.exercises.empty?
          No exercises for today!
        - else
          %table.table.table-condensed.table-bordered.table-hover
            %thead
              %tr
                %th Name
                %th Description
                %th Series
                %th Repetitions
            %tbody
              - patient.profilable.user.exercises.each do |e|
                %tr
                  %th=e.name
                  %th=e.description
                  %th=e.exercise_patients.find_by_exercise_id(e.id).series_count
                  %th=e.exercise_patients.find_by_exercise_id(e.id).repetitions
    .col-md-4
      %h3 You are #{patient.firstname}'s therapist!
      %p
        %a.btn.btn-primary
          Add new exercise
